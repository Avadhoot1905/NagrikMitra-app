<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- ============================================ -->
	<!-- PRIVACY PERMISSIONS                          -->
	<!-- Required for app features to work properly   -->
	<!-- ============================================ -->
	
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>NagrikMitra needs your location to automatically detect and report civic issues in your area.</string>
	
	<key>NSPhotoLibraryUsageDescription</key>
	<string>NagrikMitra needs access to your photos to attach evidence to issue reports.</string>
	
	<key>NSCameraUsageDescription</key>
	<string>NagrikMitra needs access to your camera to capture photos of civic issues.</string>
	
	
	<!-- ============================================ -->
	<!-- GOOGLE SIGN-IN CONFIGURATION                 -->
	<!-- Setup Instructions:                          -->
	<!-- ============================================ -->
	<!-- 
	1. Go to: https://console.cloud.google.com/
	2. Create/Select your project
	3. Enable "Google Sign-In API"
	4. Go to: Credentials > Create Credentials > OAuth client ID
	5. Select "iOS" as application type
	6. Enter Bundle ID: avadhoot.NagrikMitra2
	7. Copy the Client ID (looks like: 123456789-abc123.apps.googleusercontent.com)
	8. Replace YOUR_CLIENT_ID below with your actual Client ID
	-->
	
	<key>GIDClientID</key>
	<string>YOUR_CLIENT_ID.apps.googleusercontent.com</string>
	
	
	<!-- ============================================ -->
	<!-- URL SCHEMES FOR OAUTH CALLBACK               -->
	<!-- ============================================ -->
	<!-- 
	IMPORTANT: Replace YOUR_CLIENT_ID in the URL scheme below
	
	If your Client ID is: 123456789-abc123def456.apps.googleusercontent.com
	Then URL scheme should be: com.googleusercontent.apps.123456789-abc123def456
	
	(It's the reversed format of your client ID)
	-->
	
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>Google Sign-In</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>com.googleusercontent.apps.YOUR_CLIENT_ID</string>
			</array>
		</dict>
	</array>
	
	
	<!-- ============================================ -->
	<!-- APP TRANSPORT SECURITY                       -->
	<!-- Allow API connections                        -->
	<!-- ============================================ -->
	
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<!-- Add specific exceptions if your backend uses HTTP -->
		<!--
		<key>NSExceptionDomains</key>
		<dict>
			<key>your-backend-domain.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
		-->
	</dict>
	
</dict>
</plist>
